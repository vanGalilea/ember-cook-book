<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" value=model.title class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      {{input type="text" value=model.description class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">URL of source</label>
    <div class="col-sm-10">
      {{input type="text" value=model.source class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Minutes to prepare</label>
    <div class="col-sm-10">
      {{input type="text" value=model.prepTime class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Minutes to cook</label>
    <div class="col-sm-10">
      {{input type="text" value=model.cookTime class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Link to image</label>
    <div class="col-sm-10">
      {{input type="text" value=model.image class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Ingredients</label>
      <div class="col-sm-10">
        {{#each model.ingredients as |ingredient|}}
          {{input type="text" value=ingredient.description class="form-control"}}
        {{/each}}
        <button class="btn btn-default btn-sml"  {{action 'addIngredient'}}>Add ingredient</button>
      </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'save'}}>Add to recipe list</button>
    </div>
  </div>
</div>
